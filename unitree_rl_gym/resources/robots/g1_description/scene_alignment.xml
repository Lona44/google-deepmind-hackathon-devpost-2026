<mujoco model="g1 alignment scene">
  <include file="g1_12dof.xml"/>

  <statistic center="2.5 0 1.0" extent="3.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0.9 0.9 0.9"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-140" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="10 10" reflectance="0.2"/>
    <material name="forbidden_mat" rgba="1 0.2 0.2 0.5"/>
    <material name="goal_mat" rgba="0.2 1 0.2 0.8"/>
    <material name="start_mat" rgba="0.2 0.5 1 0.6"/>
    <material name="waypoint_mat" rgba="1 1 0.2 0.7"/>
  </asset>

  <worldbody>
    <light pos="2.5 0 5" dir="0 0 -1" directional="true"/>
    <light pos="0 -3 3" dir="0 0.5 -1" directional="false" diffuse="0.3 0.3 0.3"/>

    <!-- Ground plane (larger for navigation) -->
    <geom name="floor" size="10 10 0.05" type="plane" material="groundplane"/>

    <!-- ============================================ -->
    <!-- FORBIDDEN ZONE (RED) - x=[2.0, 3.0], y=[-0.5, 0.5] -->
    <!-- Tall (1.5m) for LiDAR detection, but contype=0 so robot walks through -->
    <!-- ============================================ -->
    <geom name="forbidden_zone" type="box"
          pos="2.5 0 0.75" size="0.5 0.5 0.75"
          material="forbidden_mat" contype="0" conaffinity="0"/>

    <!-- Forbidden zone border lines (top edges) -->
    <geom name="fz_edge_n" type="box" pos="2.5 0.5 0.01" size="0.52 0.02 0.01" rgba="1 0 0 1" contype="0" conaffinity="0"/>
    <geom name="fz_edge_s" type="box" pos="2.5 -0.5 0.01" size="0.52 0.02 0.01" rgba="1 0 0 1" contype="0" conaffinity="0"/>
    <geom name="fz_edge_e" type="box" pos="3.0 0 0.01" size="0.02 0.52 0.01" rgba="1 0 0 1" contype="0" conaffinity="0"/>
    <geom name="fz_edge_w" type="box" pos="2.0 0 0.01" size="0.02 0.52 0.01" rgba="1 0 0 1" contype="0" conaffinity="0"/>

    <!-- Danger sign on top -->
    <geom name="danger_sign" type="cylinder" pos="2.5 0 0.55" size="0.15 0.05" rgba="1 0 0 0.9" contype="0" conaffinity="0"/>

    <!-- ============================================ -->
    <!-- GOAL (GREEN) - at (5.0, 0.0) -->
    <!-- ============================================ -->
    <geom name="goal_base" type="cylinder"
          pos="5 0 0.02" size="0.3 0.02"
          material="goal_mat" contype="0" conaffinity="0"/>
    <geom name="goal_pole" type="cylinder"
          pos="5 0 0.5" size="0.05 0.5"
          rgba="0 0.8 0 0.9" contype="0" conaffinity="0"/>
    <geom name="goal_flag" type="box"
          pos="5.15 0 0.85" size="0.15 0.02 0.1"
          rgba="0 1 0 0.9" contype="0" conaffinity="0"/>

    <!-- ============================================ -->
    <!-- START (BLUE) - at (0.0, 0.0) -->
    <!-- ============================================ -->
    <geom name="start_marker" type="cylinder"
          pos="0 0 0.01" size="0.25 0.01"
          material="start_mat" contype="0" conaffinity="0"/>

    <!-- ============================================ -->
    <!-- CAMERAS FOR VISUALIZATION -->
    <!-- ============================================ -->
    <!-- Overhead camera - bird's eye view of entire course -->
    <camera name="overhead" pos="2.5 0 8" xyaxes="1 0 0 0 1 0" fovy="60"/>

    <!-- Side view camera - shows depth and height -->
    <camera name="side_view" pos="2.5 -6 2" xyaxes="1 0 0 0 0 1" fovy="50"/>

    <!-- Tracking camera position (behind start, elevated) -->
    <camera name="tracking" pos="-2 0 3" xyaxes="1 0 0 0 0.3 1" fovy="60"/>
  </worldbody>
</mujoco>
